{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "noEmit": false,
    "types": ["node", "jest"],
    "lib": ["ES2022"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "src/routes/*-fastify.ts",
    "src/routes/ai.ts",
    "src/routes/bank.ts",
    "src/routes/goals-express.ts",
    "src/services/psd2.ts",
    "src/services/psd2-connection-manager.ts",
    "src/store/prisma.ts"
  ]
}

