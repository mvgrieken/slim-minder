# API env for Supabase (remote Postgres)
PORT=4000
NODE_ENV=production
USE_DB=true

# Supabase database connection string
# Find in: Supabase Dashboard → Project Settings → Database → Connection string → URI
# Important: append sslmode=require (Supabase requires SSL)
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@YOUR_PROJECT.supabase.co:5432/postgres?schema=public&sslmode=require

