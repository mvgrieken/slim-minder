{
  "expo": {
    "name": "Slim Minder",
    "slug": "slim-minder",
    "version": "0.1.0",
    "orientation": "portrait",
    "platforms": ["ios", "android", "web"],
    "scheme": "slimminder",
    "web": {
      "bundler": "metro"
    },
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "assets/**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.slimminder.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Slim Minder gebruikt je camera om bonnetjes te scannen en uitgaven snel toe te voegen.",
        "NSMicrophoneUsageDescription": "Slim Minder gebruikt je microfoon voor spraakcommando's met de AI-coach.",
        "NSFaceIDUsageDescription": "Slim Minder gebruikt Face ID voor veilige toegang tot je financiÃ«le gegevens."
      }
    },
    "android": {
      "package": "com.slimminder.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.USE_FINGERPRINT",
        "android.permission.USE_BIOMETRIC"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "notification": {
      "icon": "./assets/notification-icon.png",
      "color": "#ffffff"
    },
    "plugins": [
      "expo-router"
    ]
  }
}
