{
  "name": "slim-minder",
  "private": true,
  "version": "0.1.0",
  "description": "Een innovatieve gedragsgerichte budgetcoach-app die financieel kwetsbare huishoudens helpt om gezonder met geld om te gaan.",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "cd apps/mobile && expo start",
    "start:web": "cd apps/mobile && expo start --web",
    "typecheck": "npm run typecheck --workspaces",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces",
    "build:web": "cd apps/mobile && node build-web.js",
    "preview:web": "cd apps/mobile && npm run preview:web",
    "dev:mobile": "cd apps/mobile && expo start",
    "dev:api": "cd apps/api && npm run dev",
    "dev:worker": "cd apps/worker && npm run dev",
    "dev:all": "concurrently \"npm run dev:api\" \"npm run dev:worker\" \"npm run dev:mobile\"",
    "build": "npm run build:packages && npm run build:api",
    "build:packages": "npm run build --workspace=packages/types && npm run build --workspace=packages/utils && npm run build --workspace=packages/ui",
    "build:api": "cd apps/api && npm run build",
    "build:mobile": "cd apps/mobile && npm run build",
    "lint:fix": "npm run lint:fix --workspaces",
    "test:api": "cd apps/api && npm test",
    "test:mobile": "cd apps/mobile && npm test",
    "db:migrate": "cd apps/api && npm run prisma:migrate",
    "db:seed": "cd apps/api && npm run prisma:seed",
    "db:studio": "cd apps/api && npm run prisma:studio",
    "db:reset": "cd apps/api && npm run prisma:migrate:reset",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "setup": "bash scripts/setup.sh",
    "clean": "npm run clean --workspaces && rm -rf node_modules",
    "clean:install": "npm run clean && npm install",
    "start": "npm run dev:all",
    "validate-deps": "npm run validate-deps --workspace=apps/mobile",
    "pre-commit": "lint-staged && npm run validate-deps",
    "pre-push": "npm run build:web"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0"
  },
  "overrides": {
    "metro": "^0.80.12",
    "metro-core": "^0.80.12"
  },
  "devDependencies": {
    "@expo/cli": "^0.24.20",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "babel-preset-expo": "^13.2.3",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-native": "^4.1.0",
    "lint-staged": "^15.2.2",
    "netlify-cli": "^23.5.0",
    "prettier": "^3.3.3",
    "semver": "^7.6.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "budget",
    "finance",
    "react-native",
    "expo",
    "typescript",
    "supabase",
    "prisma"
  ],
  "author": "Slim Minder Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/slimminder/slim-minder.git"
  },
  "bugs": {
    "url": "https://github.com/slimminder/slim-minder/issues"
  },
  "homepage": "https://slimminder.app",
  "dependencies": {
    "ansi-escapes": "^7.0.0"
  }
}
