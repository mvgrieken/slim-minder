# Slim Minder Environment Configuration
# Copy this file to .env and fill in your actual values

# =======================
# API CONFIGURATION
# =======================
PORT=4000
NODE_ENV=development

# API Base URL for mobile app (change to your deployed API URL in production)
EXPO_PUBLIC_API_URL=http://localhost:4000

# =======================
# DATABASE CONFIGURATION
# =======================
# Local PostgreSQL database (via Docker)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/slim_minder?schema=public

# Enable database usage (set to false to use in-memory storage)
USE_DB=true

# =======================
# SUPABASE CONFIGURATION
# =======================
# Supabase Project Settings -> API
EXPO_PUBLIC_SUPABASE_URL=your_supabase_project_url
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Supabase JWT Secret (Project Settings -> API -> JWT Secret)
# Used for validating tokens in API endpoints
SUPABASE_JWT_SECRET=your_jwt_secret

# Service role key for admin operations (keep server-side only!)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# =======================
# AUTHENTICATION
# =======================
# Allow guest users for development (set to false in production)
EXPO_PUBLIC_ALLOW_GUEST=true

# Require JWT authentication on API (set to false for development)
AUTH_OPTIONAL=true

# =======================
# AI SERVICES
# =======================
# OpenAI API configuration (keep server-side only!)
OPENAI_API_KEY=your_openai_api_key
OPENAI_ORGANIZATION=your_openai_org_id

# Anthropic Claude API (keep server-side only!)
ANTHROPIC_API_KEY=your_anthropic_api_key

# AI Chat configuration
EXPO_PUBLIC_AI_ENABLED=true

# =======================
# OPEN BANKING / PSD2
# =======================
# Choose provider: tink, gocardless, nordigen, budgetinsight, mock
OB_PROVIDER=mock

# Tink configuration
TINK_CLIENT_ID=your_tink_client_id
TINK_CLIENT_SECRET=your_tink_client_secret
TINK_REDIRECT_URI=http://localhost:4000/callback/tink

# GoCardless configuration  
GOCARDLESS_SECRET_ID=your_gocardless_secret_id
GOCARDLESS_SECRET_KEY=your_gocardless_secret_key

# =======================
# PUSH NOTIFICATIONS
# =======================
# Expo Push Token endpoint
EXPO_PUSH_TOKEN_ENDPOINT=https://exp.host/--/api/v2/push/send

# Firebase configuration (if using FCM)
FIREBASE_PROJECT_ID=your_firebase_project
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# =======================
# FILE STORAGE
# =======================
# Supabase Storage bucket for receipts/documents
SUPABASE_STORAGE_BUCKET=slim-minder-uploads

# Maximum file size for uploads (in MB)
MAX_UPLOAD_SIZE_MB=10

# =======================
# DEVELOPMENT & TESTING
# =======================
# Enable debug logging
DEBUG=true

# Mock data for development
EXPO_PUBLIC_USE_MOCK_DATA=true

# Disable onboarding in development
EXPO_PUBLIC_SKIP_ONBOARDING=false

# =======================
# SECURITY
# =======================
# Encryption key for sensitive data (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=your_encryption_key_here

# CORS allowed origins (comma separated)
CORS_ORIGINS=http://localhost:19006,http://localhost:3000

# Rate limiting (requests per minute per IP)
RATE_LIMIT_RPM=100

# =======================
# MONITORING & ANALYTICS
# =======================
# Sentry DSN for error tracking
SENTRY_DSN=your_sentry_dsn

# Analytics tracking (set to false to disable)
EXPO_PUBLIC_ANALYTICS_ENABLED=false

# =======================
# DEPLOYMENT
# =======================
# App version for OTA updates
EXPO_PUBLIC_APP_VERSION=0.1.0

# Update channel (production, staging, development)
EXPO_PUBLIC_UPDATE_CHANNEL=development

# =======================
# LOCALIZATION
# =======================
# Default app language
EXPO_PUBLIC_DEFAULT_LANGUAGE=nl

# Supported currencies
EXPO_PUBLIC_SUPPORTED_CURRENCIES=EUR,USD

# Default currency
EXPO_PUBLIC_DEFAULT_CURRENCY=EUR

